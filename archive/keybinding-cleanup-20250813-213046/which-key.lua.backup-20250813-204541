-- which-key.nvim configuration for visual menu discovery
-- Provides instant visual hints for all keybindings when pressing leader key

return {
  "folke/which-key.nvim",
  event = "VeryLazy",
  init = function()
    vim.o.timeout = true
    vim.o.timeoutlen = 300
  end,
  opts = {
    plugins = {
      marks = true,
      registers = true,
      spelling = {
        enabled = true,
        suggestions = 20,
      },
      presets = {
        operators = true,
        motions = true,
        text_objects = true,
        windows = true,
        nav = true,
        z = true,
        g = true,
      },
    },
    operators = { gc = "Comments" },
    key_labels = {
      ["<space>"] = "SPC",
      ["<cr>"] = "RET",
      ["<tab>"] = "TAB",
    },
    icons = {
      breadcrumb = "¬ª",
      separator = "‚ûú",
      group = "", -- remove the + icon
    },
    popup_mappings = {
      scroll_down = "<c-d>",
      scroll_up = "<c-u>",
    },
    window = {
      border = "rounded",
      position = "bottom",
      margin = { 1, 0, 1, 0 },
      padding = { 2, 2, 2, 2 },
      winblend = 0,
    },
    layout = {
      height = { min = 4, max = 25 },
      width = { min = 20, max = 50 },
      spacing = 3,
      align = "left",
    },
    ignore_missing = false,
    hidden = { "<silent>", "<cmd>", "<Cmd>", "<CR>", "call", "lua", "^:", "^ " },
    show_help = true,
    show_keys = true,
    triggers = "auto",
    triggers_blacklist = {
      i = { "j", "k" },
      v = { "j", "k" },
    },
    disable = {
      buftypes = {},
      filetypes = { "TelescopePrompt" },
    },
  },
  config = function(_, opts)
    local wk = require("which-key")
    wk.setup(opts)
    
    -- Register group names for better organization (merge both approaches)
    wk.register({
      ["<leader>"] = {
        a = { name = "ü§ñ AI/Claude", _ = "which_key_ignore" },
        b = { name = "üìÅ Buffers", _ = "which_key_ignore" },
        c = { name = "üíª Code/LSP", _ = "which_key_ignore" },
        m = { name = "üéØ Multicursor", _ = "which_key_ignore" },
        M = { name = "üìã Messages", _ = "which_key_ignore" },
        d = { name = "üîß Debug/Errors", _ = "which_key_ignore" },
        f = { name = " Find/Files", _ = "which_key_ignore" },
        e = { name = "üìÅ Explorer", _ = "which_key_ignore" },
        g = { name = "üåø Git", _ = "which_key_ignore" },
        G = { name = " GitHub", _ = "which_key_ignore" },
        h = { name = "üîÄ Git Hunks", _ = "which_key_ignore" },
        j = { name = "üìä Jupyter/Molten", _ = "which_key_ignore" },
        l = { name = " LSP", _ = "which_key_ignore" },
        r = { name = "Û∞õî Replace/Refactor", _ = "which_key_ignore" },
        s = { name = "üîç Search", _ = "which_key_ignore" },
        t = { name = "üß™ Testing", _ = "which_key_ignore" },
        u = { name = " UI/Toggles", _ = "which_key_ignore" },
        v = { name = " VSCode", _ = "which_key_ignore" },
        w = { name = " Windows", _ = "which_key_ignore" },
        x = { name = " Diagnostics", _ = "which_key_ignore" },
        z = { name = " Zen", _ = "which_key_ignore" },
      },
      -- Visual mode groups
      ["<leader>"] = {
        mode = { "v" },
        a = { name = "ü§ñ AI/Claude", _ = "which_key_ignore" },
        j = { name = "üìä Jupyter", _ = "which_key_ignore" },
        m = { name = "üéØ Multicursor", _ = "which_key_ignore" },
        r = { name = "Û∞õî Replace", _ = "which_key_ignore" },
        s = { name = "üîç Search", _ = "which_key_ignore" },
        v = { name = " VSCode", _ = "which_key_ignore" },
      },
      -- Additional navigation hints
      ["]"] = { name = "Next", _ = "which_key_ignore" },
      ["["] = { name = "Previous", _ = "which_key_ignore" },
      ["]j/[j"] = { name = "Jupyter cells", _ = "which_key_ignore" },
      ["]c/[c"] = { name = "Git hunks", _ = "which_key_ignore" },
      ["]d/[d"] = { name = "Diagnostics", _ = "which_key_ignore" },
      ["]g/[g"] = { name = "Git hunks", _ = "which_key_ignore" },
      ["g"] = { name = "Go to", _ = "which_key_ignore" },
      ["z"] = { name = "Fold", _ = "which_key_ignore" },
    })
    
    -- Register git subgroups for better organization
    wk.register({
      ["<leader>g"] = {
        -- Git operations subgroups
        name = "üåø Git",
        -- Status/Info
        s = "Git status",
        b = "Git branches",
        c = "Git commits",
        C = "Buffer commits",
        -- Diff views
        d = "Open diff view",
        D = "Close diff view",
        -- History
        h = "File history",
        H = "Branch history",
        -- Git Explorer
        e = "Toggle git explorer",
        E = "Focus git explorer",
        -- UI Toggles (organized together)
        t = "Toggle git signs",
        n = "Toggle line number highlight",
        l = "Toggle line highlight",
        W = "Toggle word diff",
        T = "Toggle blame line",
        r = "Refresh git signs",
        -- Navigation
        j = "Next changed file",
        k = "Previous changed file",
        f = "List changed files",
        -- Watchlist
        w = { name = "üìã Watchlist", _ = "which_key_ignore" },
      },
      ["<leader>gw"] = {
        -- Git watchlist operations
        name = "üìã Git Watchlist",
        a = "Add file to watchlist",
        r = "Remove file from watchlist",
        l = "Show watchlist",
        j = "Next watchlist file",
        k = "Previous watchlist file",
        m = "Check for changes",
        s = "Start auto-monitoring",
      },
      ["<leader>h"] = {
        -- Git hunk operations
        name = "üîÄ Git Hunks",
        s = "Stage hunk",
        r = "Reset hunk",
        S = "Stage buffer",
        u = "Undo stage hunk",
        R = "Reset buffer",
        p = "Preview hunk",
        b = "Blame line (full)",
        B = "Toggle blame line",
        d = "Diff this",
        D = "Diff this (cached)",
        q = "List all hunks in quickfix",
        Q = "List buffer hunks in quickfix",
      },
    })
    
    -- Register specific command descriptions for clarity
    wk.register({
      ["<leader>"] = {
        -- Quick actions
        w = "Close buffer",
        s = "Save file",
        q = "Quit",
        
        -- Number keys for buffer switching
        ["1"] = "Buffer 1",
        ["2"] = "Buffer 2",
        ["3"] = "Buffer 3",
        ["4"] = "Buffer 4",
        ["5"] = "Buffer 5",
        ["6"] = "Buffer 6",
        ["7"] = "Buffer 7",
        ["8"] = "Buffer 8",
        ["9"] = "Buffer 9",
        
        -- Navigation
        ["<Leader>"] = "Last buffer",
        ["?"] = "Show all keybindings",
        d = "Next buffer",
        a = "Previous buffer",
        e = "Toggle file explorer",
        E = "Focus file explorer",
      },
    })
  end,
}